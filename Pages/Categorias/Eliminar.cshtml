@page
@model Agenda.Pages.Categorias.EliminarModel
@{
	ViewData["Title"] = "Eliminar";
}
<h4 class="display-4 text-danger">Seguro que desea borrar el Siguiente Registro, esta accion es irreversible</h4>
<nav aria-label="breadcrumb">
	
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-page="Index">
				Categorias
				</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">
			Eliminar
		</li>
	</ol>
</nav>

	<div class="card">
		<div class="card-header">
			<h3 class="card-title">@Model.Categoria.Nombre</h3>
		</div>
		<div class="card-body">
			<label>Fecha Creacion:</label>
			<p class="card-text">@Model.Categoria.FechaCreacion</p>
		</div>
	</div>
	<button class="btn btn-danger" asp-action="@Model.OnPost()">Borrar</button>
	

